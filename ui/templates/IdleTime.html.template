<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" style="background : #ffffff">
  <head>
    <title>SessionTracker</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="./resources/images/favicon.ico"
    />
    <link rel="stylesheet" href="./resources/css/IdleTime.css" />
    <link rel="stylesheet" href="./resources/css/ProfileSwitcher.css" />
    <script src="./resources/js/jquery-3.7.1.min.js"></script>
    <script src="./resources/js/chart.js"></script>
    <script src="./resources/js/chartjs-plugin-datalabels-2.0.0.js"></script>
    <script>
      $(document).ready(function () {
        $("table").each(function () {
          var tHead = $(this).find("tr:first").html();
          $(this).find("colgroup").remove();
          $(this).find("tr:first").remove();
          $(this)
            .find("tbody")
            .before("<thead>" + tHead + "</thead>");
        });
      });
    </script>
  </head>

  <body>
    <h1>Time you left games Idle</h1>
    <div id="chart-container">
      <canvas id="game-vs-time-chart"></canvas>
    </div>
    <div id="gaming-data" style="display: none">_GAMINGDATA_</div>
    <script src="./resources/js/common.js"></script>
    <script src="./resources/js/GameVsTime.js"></script>
    <script>
      let gamingData = JSON.parse(
        document.getElementById("gaming-data").textContent
      );
      updateChart(gamingData.length, "Idle Time (Hours)");
    </script>
    <div id="navigation-bar">
      <button class="custom-button" id="summary-button" onclick="window.location.href='./Summary.html';">Life Time Summary</button>
      <button class="custom-button" id="gaming-time-button" onclick="window.location.href='./GamingTime.html';">Time Spent Gaming</button>
      <button class="custom-button" id="most-played-button" onclick="window.location.href='./MostPlayed.html';">Most Played</button>
      <button class="custom-button" id="all-games-button" onclick="window.location.href='./AllGames.html';">All Games</button>
      <button class="custom-button" id="idle-time-button" onclick="window.location.href='./IdleTime.html';">Idle Time</button>
      <button class="custom-button" id="session-history-button" onclick="window.location.href='./SessionHistory.html';">Session History</button>
      _PROFILE_SWITCHER_
    </div>
  </body>
</html>
